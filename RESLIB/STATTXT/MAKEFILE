## Using Resources - Switching Resources Dynamically


CFLAGS = /Ft- /Gd+ /Ge+ /Gm+ /Wall+gnr-ppc-ppt-uni-vft-
DFLAGS = /Ft- /Gd+ /Ge- /Gm+ /Wall+gnr-ppc-ppt-uni-vft-
LFLAGS = /PM:PM

!ifdef IC_PM
ODIR=.\os2
ORES=$(ODIR)\myeng.res
RC=rc.exe -DIC_PM
!else
ODIR=.\win
ORES=
RC=irc.exe -Fo$(ODIR)\myeng.res
!endif

ALL :  CREATEDIR  $(ODIR)\stattxt.exe $(ODIR)\myeng.dll

$(ODIR)\stattxt.exe : $(ODIR)\stattxt.obj
   icc $(CFLAGS) /B"$(LFLAGS)" /Fe$(ODIR)\stattxt.exe $(ODIR)\stattxt.obj

$(ODIR)\myeng.dll   : $(ODIR)\dummy.obj $(ODIR)\myeng.res
!ifdef IC_PM
   icc $(DFLAGS) /B"$(LFLAGS)" /Fe$(ODIR)\myeng.dll $(ODIR)\dummy.obj myeng.def
   $(RC) $(ODIR)\myeng.res $(ODIR)\myeng.dll
!else
   icc $(DFLAGS) /B"$(LFLAGS)" /Fe$(ODIR)\myeng.dll $(ODIR)\dummy.obj $(ODIR)\myeng.res
!endif

$(ODIR)\stattxt.obj : stattxt.cpp
   icc $(CFLAGS) /C+ /Fo$(ODIR)\stattxt.obj stattxt.cpp

$(ODIR)\dummy.obj   : dummy.cpp
   icc $(DFLAGS) /C+ /Fo$(ODIR)\dummy.obj dummy.cpp

$(ODIR)\myeng.res   : myeng.rc mytext.h
   $(RC) -r myeng.rc $(ORES)

CREATEDIR:
  @if not exist $(ODIR)* md $(ODIR)

